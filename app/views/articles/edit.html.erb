<%= form_with model: @article do |form| %>
  <div class="card text-bg-dark">
    <div class="card-body">

      <div class="mb-3">
          <%= form.label :title, { class: "form-label"}%><br>
          <%= form.text_field :title, { class: "form-control", placeholder: "Title" } %>
      </div>
      <div class="mb-3">
          <%= form.label :body, { class: "form-label"} %><br>
          <%= form.text_area :body, { class: "form-control", placeholder: "Body" } %>
      </div>

      <div>
        <%= form.submit "Save article", class: "btn btn-primary" %>
        <%= link_to 'Cancel', articles_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>