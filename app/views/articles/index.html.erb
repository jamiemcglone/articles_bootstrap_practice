<h1>Articles</h1>
<div class="vstack gap-3 d-md-flex">
  <% @articles.each do |article| %>
    <%= render "article", article: article %>
  <% end %>
</div>

<div class="d-grid gap-2 d-md-flex justify-content-md-center">
  <a class="btn btn-primary" href="articles/new" role="button">New article</a>
</div>